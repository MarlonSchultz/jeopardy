{% extends "base.html.twig" %}
{% block content %}
    <h1>Admin Page</h1>
    <div class="row">
        {% for entry in entries %}
            <form class="col s12" method="post">
                <input type="hidden" id="id" name="id" value="{{ entry.id }}"/>
                <div class="row hoverable">
                    <div class="input-field col s2">
                        <input id="category" name="category" type="text" class="validate" value="{{ entry.category }}">
                        <label for="category">Category</label>
                    </div>
                    <div class="input-field col s1">
                        <input id="points" name="points" type="text" class="validate" value="{{ entry.points }}">
                        <label for="points">Points</label>
                    </div>
                    <div class="input-field col s3">
                        <textarea id="answer" name="answer" class="materialize-textarea">{{ entry.answer }}</textarea>
                        <label for="answer">Answer</label>
                    </div>
                    <div class="input-field col s3">
                        <textarea id="question" name="question" class="materialize-textarea">{{ entry.question }}</textarea>
                        <label for="question">Question</label>
                    </div>
                    <div class="input-field col s2">
                        <button type="submit" name="save[{{ entry.id }}]" class="btn">Save</button>
                    </div>
                </div>
            </form>
        {% endfor %}


